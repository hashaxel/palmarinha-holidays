<div class="row section">
	<div class="col-md-12">
		<h2>Hi OIB!</h2>
		<p class="lead">You can change pretty much anything from this admin page.</p>
	</div>
</div>

<div class="row section">
	<div class="col-md-12">
		<h3 class="title">Create New Category/Author/Publisher</h3>
		<a href="/cap/new" class="btn btn-large btn-primary">New C/A/P</a>
	</div>
</div>

<div class="row section">
	<div class="col-md-12">
		<h3 class="title">Books</h3>
		<a href="/books/new" class="btn btn-large btn-primary">Create New Book</a>
	</div>
	<div class="col-md-12">
		<ul class="list-group" id="admin-books-list">
		  <% @books.each do |book| %>
		  	<li class="list-group-item clearfix">
		  			<div class="img-block col-md-1">
		  				<a href="/book/<%= book.id %>/<%= book.slug %>"><img src="/books/images/<%= book.cover_url %>" alt="" width="40" /></a>
		  			</div>
		  			<div class="col-md-6 book-name">
			  			<a href="/book/<%= book.id %>/<%= book.slug %>"><%= book.title %></a>
		  			</div>
		  			<div class="col-md-5 text-right">
			  			<span class="action"><span class="glyphicon glyphicon-pencil"></span> <a href="/book/<%= book.id %>/edit">Edit</a></span>
			  			<span class="action">
			  				<button class="delete-btn" data-book-name="<%= book.title %>" data-book-id="<%= book.id %>" data-target=".delete-modal" data-type="book">
			  				  <span class="glyphicon glyphicon-remove"></span>  Delete
			  				</button>
			  			</span>
		  			</div>
		  	</li>
		  <% end %>
		</ul>
	</div>
</div>

