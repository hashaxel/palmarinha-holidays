<div class="container">
	<%= erb :navigation %>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h3 class="title">Create A New Hotel</h3>
			<form role="form" action="/create" method="post" id="hotel" enctype="multipart/form-data">			
				<div class="row form-group">
					<div class="col-md-12">
						<label>Hotel Name</label><br />
						<input type="text" name="hotel[name]" id="name" class="form-control" placeholder="Hotel name" />
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">			
						<label>Price</label><br />
						<input type="text" name="hotel[price]" id="price" placeholder="In Rs." class="form-control" />	
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label for="desc">Hotel Description</label>
						<textarea name="hotel[desc]" class="form-control" id="desc"></textarea>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">			
						<label>Location</label><br />
						<input type="text" name="hotel[location]" id="location" placeholder="eg. Goa"  class="form-control" />	
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label for="thumbnail">Thumbnail</label>
						<div class="file-input-wrap">
							<input type="file" id="featured-img-picker" name="hotel[thumbnail]" class="file-picker file-inputs new-feature-file" data-demo="#demo-img" data-filename-placement="inside" title="Thumbnail" />
						</div>
					</div>
				</div>
				<div class="form-group">
						<button id="submit" type="Submit" class="btn btn-primary btn-large submit-btn">Create New Hotel</button>
				</div>
			</form>
		</div>
	</div>
</div>