<form role="form" action="/author/update" method="post" id="author" enctype="multipart/form-data">
	<input type="hidden" name="author[id]" value="<%= @author.id %>" />
	<div class="col-md-8">
		<div class="form-group">
				<label>Author Name:</label><br />
				<input type="text" name="author[name]" id="name" class="form-control"  value="<%= @author.name %>"/>	
		</div>
		<div class="form-group">
			<label>Author Description:</label><br />
			<textarea type="text" name="author[description]" id="description" class="form-control" rows="5" ><%= @author.description %></textarea>
		</div>
		

		<div class="form-group">
				<input type="Submit" class="btn btn-primary btn-large submit-btn" value="Edit Author">
			</div>
	</div>		
</form>