<div class="col-md-12 edit-intro">
	<h3 class="title">Create A New Author</h3>
</div>


<form role="form" action="/create-author" method="post" id="author" enctype="multipart/form-data">
	
	<div class="col-md-8">
		<div class="form-group">
				<label>Author Name:</label><br />
				<input type="text" name="author[name]" id="name" class="form-control" />	
		</div>
		
		<div class="form-group">
				<label>Author Description:</label><br />
				<input type="text" name="author[description]" id="description" class="form-control" />	
		</div>
		
		<div class="form-group">
				<input type="Submit" class="btn btn-primary btn-large submit-btn" value="Add New Author">
			</div>
	</div>	
</form>
