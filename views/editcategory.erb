<form role="form" action="/category/update" method="post" id="category" enctype="multipart/form-data">
	<input type="hidden" name="category[id]" value="<%= @category.id %>" />
	<div class="col-md-8">
		<div class="form-group">
				<label>Author Name:</label><br />
				<input type="text" name="category[name]" id="name" class="form-control"  value="<%= @category.name %>"/>	
		</div>
		<div class="form-group">
			<label>Author Description:</label><br />
			<textarea type="text" name="category[description]" id="description" class="form-control" rows="5" ><%= @category.description %></textarea>
		</div>
		

		<div class="form-group">
				<input type="Submit" class="btn btn-primary btn-large submit-btn" value="Edit Category">
			</div>
	</div>		
</form>